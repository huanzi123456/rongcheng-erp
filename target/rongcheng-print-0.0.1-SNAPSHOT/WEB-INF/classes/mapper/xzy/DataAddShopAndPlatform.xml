<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"      
 "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">
<!-- 数据统计页面的添加店铺来源和平台来源的下拉选 -->
<mapper namespace="com.rongcheng.erp.dao.dataStatisticsDao.Xzy_DataAddShopAndPlatformDao">
<!-- 1.查询当前账户的id及owner_id -->
<select id="selectUserId" parameterType="String" resultType="com.rongcheng.erp.entity.UserInfo">
  SELECT id,owner_id as ownerId
  FROM user_info
  WHERE account_num=#{accountNum}
</select>
<!-- 2.查询所有的店铺  name及id -->
<select id="findShopNameAndShopId" parameterType="BigInteger" resultType="com.rongcheng.erp.entity.ShopInfo">
  SELECT id,name
  FROM shop_info
  WHERE owner_id=#{ownerId}
</select> 
<!-- 3.查询所有的平台  name及id -->
<select id="findPlatformNameAndPlatformId" parameterType="BigInteger" resultType="com.rongcheng.erp.entity.PlatformInfo">
  SELECT id,NAME
  FROM platform_info
  WHERE owner_id=#{ownerId}
</select>
</mapper>